<%include ../partials/header%>

<div class="container">
    <form action="/mainPage/<%=cPost._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">შეიყვანეთ სათაური ქართულად</label>
            <input name="cPost[title]" type="text" class="form-control" id="exampleInputEmail1" value="<%=cPost.title%>">
            <select name="cPost[status]">
                <option>Solved / Approved</option>
                <option>Unsolved</option>
            </select>
        </div>
        <div class="form-group">
            <label for="pickedTag">Old Tag: <%=cPost.tag%></label>
            <select name="cPost[tag]" id="pickedTag" class="form-control">
                <option>Android</option>
                <option>Apple</option>
                <option>Navision</option>
                <option>Must know!</option>
                <option>FAQ</option>
                <option>Billing</option>
                <option>Other</option>
                <% if(currentUser.permission === "admin"){ %>
                <option>HOT</option>
                <% } %>
            </select>
        </div>
        <!--<textarea name="cPost[content]" value=""></textarea>-->

        <!--<script>-->
            <!--CKEDITOR.replace('cPost[content]');-->
        <!--</script>-->

        <button class="btn btn-default">Submit</button>
    </form>

</div>



<%include ../partials/footer%>